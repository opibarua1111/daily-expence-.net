@model IEnumerable<Products>
@{
    ViewData["Title"] = "Index";
}

<div class="cotainer p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Added more expense
                </a>
        </div>
    </div>
    <form method="post">
        <div class="my-3">
            Start Date: <input type="date" name="startDate"/>
        End Date: <input type="date" name="endDate"/>
        <input type="submit" value="Search" class="btn btn-success ms-4"/>
        </div>
        <table class="table table-bodered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Quantity</th>
            <th>Price</th>
            <th>Cost Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
       {
           <tr>
               <td width="25%">@obj.ProductName</td>
               <td width="25%">@obj.ProductQuantity</td>
               <td width="25%">@obj.price</td>
               <td width="25%">@obj.CreatedDateTime</td>
               <td>
                   <div class="w-75 btn-group" role="group">
                       <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary my-2">
                           <i class="bi bi-pencil-square"></i> Edit
                       </a>
                       <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 my-2">
                           <i class="bi bi-trash3-fill"></i> Delete
                       </a>
                   </div>
               </td>
           </tr>
       }
    </tbody>
</table>
    </form>
</div>


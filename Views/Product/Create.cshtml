@model Products

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">add Your Expense</h2>
			<hr/>
		</div>
		<div asp-validation-summary="All"></div>
			<div class="mb-3">
		<label asp-for="ProductName"></label>
		<input asp-for="ProductName" class="form-control"/>
		<span asp-validation-for="ProductName" class="text-danger"/>
	</div>
	<div class="mb-3">
		<label asp-for="ProductQuantity"></label>
		<input asp-for="ProductQuantity" class="form-control"/>
		<span asp-validation-for="ProductQuantity" class="text-danger"/>
	</div>
	<div class="mb-3">
		<label asp-for="price"></label>
		<input asp-for="price" class="form-control"/>
		<span asp-validation-for="price" class="text-danger"/>
	</div>
	<button type="submit" class="btn btn-primary" style="width:150px">Add</button>
	<a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
	</div>
</form>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}

